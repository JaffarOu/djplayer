<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jf.djplayer" >

    <!-- 主要权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--<uses-permission android:name="read_external_storage"/>-->

    <application
        android:name=".other.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >

        <!-- main模块所用"Activity"__start-->
        <!-- 欢迎界面Activity-->
        <activity android:name=".main.WelcomeActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 主活动-->
        <activity android:name=".main.MainActivity"/>
        <!-- main模块所用"Activity"__end-->

        <!-- 专门用于显示播放信息用的活动-->
        <activity
            android:name=".showplayinfo.SongPlayInfoActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"
            android:launchMode="singleTop">
        </activity>


        <!-- 显示扫描过程用的活动-->
        <activity
            android:name=".songscan.ScanningSongActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar">
        </activity>

        <!-- 搜索模块"Activity"__start-->
        <activity android:name=".search.SearchActivity"/>
        <!-- 搜索模块"Activity"__end-->
        
        <!-- 后台控制播放用的服务-->
        <service
            android:name=".service.PlayerService"
            android:exported="false" >
        </service>


    </application>

</manifest>
