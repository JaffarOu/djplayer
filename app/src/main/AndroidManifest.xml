<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jf.djplayer" >

    <!-- 主要权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--<uses-permission android:name="read_external_storage"/>-->

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- main模块所用"Activity"__start-->
        <!-- 欢迎界面Activity-->
        <activity android:name=".main.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 主活动-->
        <activity android:name=".main.MainActivity"/>
        <!-- main模块所用"Activity"__end-->

        <!-- 播放信息-->
        <activity
            android:name=".playinfo.PlayInfoActivity"
            android:launchMode="singleTop">
        </activity>


        <!-- 音乐扫描_start-->
        <!--扫描入口-->
        <activity android:name=".songscan.ScanSongActivity"/>
        <!--扫描设置-->
        <activity android:name=".songscan.ScanSettingActivity"/>
        <!--扫描过程-->
        <activity android:name=".songscan.ScanningSongActivity"/>
        <!--音乐扫描_end-->


        <!-- 搜索模块"Activity"__start-->
        <activity android:name=".search.SearchActivity"/>
        <!-- 搜索模块"Activity"__end-->
        
        <!-- 后台控制播放用的服务-->
        <service
            android:name=".service.PlayerService"
            android:exported="false" >
        </service>

    </application>

</manifest>
