<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <!-- 自定义的总体主题-->
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/my_ActionBar_Style</item>
        <item name="android:actionBarTabTextStyle">@style/my_actionBar_tab_text_style</item>
    </style>

    <!-- 自定义的actionBarStyle-->
    <style name="my_ActionBar_Style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#00c0ff</item>
    </style>

    <!-- 自定义的"actionbarTabTextStyle"-->
    <style name="my_actionBar_tab_text_style" parent="@android:style/Widget.Holo.ActionBar.TabText">
      <!-- 修改actionTab文字的颜色-->
        <item name="android:textColor">#7d7d7d</item>
    </style>

    <!--本地音乐popupWindow文字的风格-->
    <style name="local_music_popup_window_text_view" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/blue_white_press_selector</item>
    </style>
    <style name="local_music_popup_window_image" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ffcdc9c9</item>
    </style>
</resources>