<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_song_play_info_background"
    android:id="@+id/ll_activity_song_play_info">


    <com.jf.djplayer.customview.FragmentTitleLinearLayout
        android:id="@+id/fragmentTitleLinearLayout_activity_song_play_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        customView:fragmentTitleLinearLayout_distance="8dp"
        customView:fragmentTitleLinearLayout_titleIcon="@drawable/ic_return"
        customView:fragmentTitleLinearLayout_searchImageVisibility="gone"
        customView:fragmentTitleLinearLayout_titleText="歌曲名字"
        customView:fragmentTitleLinearLayout_titleTextSize="12sp">

    </com.jf.djplayer.customview.FragmentTitleLinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_song_play_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_transparent">

    </android.support.v4.view.ViewPager>

    <!--中间进度条和时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white_transparent">
        <TextView
            android:id="@+id/tv_activity_song_playInfo_currenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <SeekBar
            android:id="@+id/sb_activity_song_play_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_transparent"/>

        <TextView
            android:id="@+id/tv_activity_song_playInfo_totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="8dp"
            android:background="@color/white_transparent"
            android:text="00:00"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 这些事底边控制栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_activity_song_playInfo_play_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/play_info_activity_press"
            android:src="@drawable/ic_activity_play_song_info_orderplay"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_activity_song_playInfo_previousSong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/play_info_activity_press"
            android:src="@drawable/activity_song_play_prev"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/activity_song_play_info_playOrPaused"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/play_info_activity_press"
            android:src="@drawable/activity_song_play_info_play"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_activity_song_playInfo_nextSong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/play_info_activity_press"
            android:src="@drawable/activity_song_play_info_next"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_activity_song_playInfo_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/play_info_activity_press"
            android:src="@drawable/activity_song_play_no_collection"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>