<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jf.djplayer.customview.FragmentTitleLayout
        android:id="@+id/fragmentTitleLayout_fragment_base_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        android:padding="8dp">
    </com.jf.djplayer.customview.FragmentTitleLayout>

    <com.jf.djplayer.customview.TextViewTabs
        android:id="@+id/textViewLinearLayout_fragment_base_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        customView:textViewTabs_selectedTextColor="@color/sky_blue"
        customView:textViewTabs_itemTextSize="10sp">
    </com.jf.djplayer.customview.TextViewTabs>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_base_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>