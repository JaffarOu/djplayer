<?xml version="1.0" encoding="utf-8"?>
<!--所有使用"expandableListView"的Fragment的共有视图-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ExpandableListView
        android:id="@+id/el_fragment_expandable_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000">
    </ExpandableListView>
    <ProgressBar
        android:id="@+id/pb_fragment_expandable"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/tv_fragment_expandable_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在载入"
        android:textSize="16sp"
        android:layout_below="@id/pb_fragment_expandable"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>