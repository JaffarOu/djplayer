<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/local_music_linear_layout">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_local_music_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <fragment
        android:name="com.jf.djplayer.fragment.BottomFragment"
        android:id="@+id/fm_activity_local_music_bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>