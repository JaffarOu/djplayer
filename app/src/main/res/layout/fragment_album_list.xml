<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jf.djplayer.controller.localmusic.AlbumListFragment">

    <!--ListView加载完成前的进度条-->
    <include
        android:id="@+id/loading_hint_view_fragment_second_album"
        layout="@layout/loading_layout"/>

    <!--ListView加载完成但是没内容时的提示-->
    <include
        android:id="@+id/empty_view_fragment_second_album"
        layout="@layout/local_music_no_song"/>

    <!--歌手列表-->
    <ListView
        android:id="@+id/lv_fragment_second_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</FrameLayout>