<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#ffffffff">
<!--本地音乐右上角的省略号按钮点击后出的布局之一-->
    <!-- 这个对应fragment：歌曲-->

    <TextView
        android:id="@+id/tv_activity_localmusic_popupwindow_scanmusic"
        style="@style/local_music_popup_window_text_view"
        android:text="扫描音乐"/>
    <!-- item间分隔线-->
    <ImageView
        style="@style/local_music_popup_window_image"/>

    <TextView
        android:id="@+id/tv_localmusic_popupwindow_sort_songname"
        style="@style/local_music_popup_window_text_view"
        android:text="按歌曲名排序"/>
    <!-- item间分隔线-->
    <ImageView
        style="@style/local_music_popup_window_image"/>

    <TextView
        android:id="@+id/tv_localmusic_popupwindow_sort_songartist"
        style="@style/local_music_popup_window_text_view"
        android:text="按歌手名排序" />

    <!-- item间分隔线-->
    <ImageView
        style="@style/local_music_popup_window_image"/>

    <TextView
        style="@style/local_music_popup_window_text_view"
        android:text="按添加时间排序"/>
    <!-- item间分隔线-->
    <ImageView
        style="@style/local_music_popup_window_image"/>

    <TextView
        style="@style/local_music_popup_window_text_view"
        android:text="批量管理歌曲"/>

    <!-- item间分隔线-->
    <ImageView
        style="@style/local_music_popup_window_image"/>

    <TextView
        style="@style/local_music_popup_window_text_view"
        android:text="一键获取词图" />
    <!-- item间分隔线-->
    <ImageView
        style="@style/local_music_popup_window_image"/>


</LinearLayout>